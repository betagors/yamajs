{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["build", "^test"],
      "outputs": [".turbo/test-cache/**"]
    },
    "test:coverage": {
      "dependsOn": ["build", "^test"],
      "outputs": ["coverage/**", ".turbo/test-cache/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
