{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@yama/core": ["packages/core/src"],
      "@yama/runtime-node": ["packages/runtime-node/src"],
      "@yama/sdk": ["packages/sdk/src"],
      "@yama/docs-generator": ["packages/docs-generator/src"]
    }
  }
}

