{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@betagors/yama-core": ["packages/core/src"],
      "@betagors/yama-runtime-node": ["packages/runtime-node/src"],
      "@betagors/yama-sdk": ["packages/sdk/src"],
      "@betagors/yama-openapi": ["packages/openapi/src"],
      "@betagors/yama": ["packages/yama/src"]
    }
  }
}

