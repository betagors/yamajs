{
  "name": "@betagors/yama-s3",
  "version": "0.1.0-alpha.0",
  "type": "module",
  "description": "Yama S3-compatible object storage adapter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagors/yama.git",
    "directory": "packages/s3"
  },
  "keywords": [
    "yama",
    "s3",
    "aws",
    "storage",
    "object-storage",
    "adapter",
    "plugin"
  ],
  "license": "MPL-2.0",
  "yama": {
    "pluginApi": "1.0",
    "yamaCore": "^0.1.0",
    "category": "storage",
    "entryPoint": "./dist/plugin.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@betagors/yama-core": "workspace:*",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}

