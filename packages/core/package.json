{
  "name": "@betagors/yama-core",
  "version": "0.1.0-alpha.0",
  "type": "module",
  "description": "Yama â€” backend as config (core runtime and types)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": "./dist/cli.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "yama-typegen": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagors/yama.git",
    "directory": "packages/core"
  },
  "keywords": [
    "yama",
    "backend",
    "framework",
    "api",
    "yaml",
    "config",
    "typescript"
  ],
  "license": "MPL-2.0",
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist tsconfig.build.tsbuildinfo"
  },
  "dependencies": {
    "@betagors/yama-errors": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.1",
    "semver": "^7.7.3"
  },
  "peerDependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "peerDependenciesMeta": {
    "bcryptjs": {
      "optional": true
    },
    "jsonwebtoken": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^1.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}