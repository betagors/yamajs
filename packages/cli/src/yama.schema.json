{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Yama Configuration Schema",
  "description": "Schema for Yama YAML configuration files",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name"
    },
    "version": {
      "type": "string",
      "description": "Project version (e.g., '1.0.0')"
    },
    "plugins": {
      "description": "Plugin configurations. Can be a map of plugin names to their configs, or an array of plugin names.",
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "database": {
      "type": "object",
      "description": "Database configuration",
      "properties": {
        "dialect": {
          "type": "string",
          "enum": ["postgresql"],
          "description": "Database dialect"
        },
        "url": {
          "type": "string",
          "description": "Database connection URL. Use ':memory:' for in-memory testing (PGlite)"
        },
        "pool": {
          "type": "object",
          "properties": {
            "min": {
              "type": "integer",
              "minimum": 0
            },
            "max": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "options": {
          "type": "object",
          "description": "Dialect-specific options",
          "additionalProperties": true
        }
      },
      "required": ["dialect"]
    },
    "server": {
      "type": "object",
      "description": "HTTP server configuration",
      "properties": {
        "engine": {
          "type": "string",
          "enum": ["fastify"],
          "default": "fastify",
          "description": "Server engine (currently only 'fastify' is supported)"
        },
        "options": {
          "type": "object",
          "description": "Engine-specific options",
          "additionalProperties": true
        }
      }
    },
    "auth": {
      "type": "object",
      "description": "Authentication configuration",
      "properties": {
        "roles": {
          "type": "object",
          "description": "Role-to-permission mapping for permission-based authorization",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "permissions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of permissions for this role (supports wildcards: '*', 'posts:*')"
              }
            },
            "required": ["permissions"]
          }
        },
        "providers": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["jwt"]
                  },
                  "secret": {
                    "type": "string",
                    "description": "JWT secret key"
                  },
                  "algorithm": {
                    "type": "string",
                    "description": "JWT algorithm (e.g., 'HS256')"
                  },
                  "issuer": {
                    "type": "string",
                    "description": "JWT issuer"
                  },
                  "audience": {
                    "type": "string",
                    "description": "JWT audience"
                  }
                },
                "required": ["type", "secret"]
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["api-key"]
                  },
                  "header": {
                    "type": "string",
                    "description": "Header name for API key (e.g., 'X-API-Key')"
                  }
                },
                "required": ["type", "header"]
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["basic"]
                  },
                  "mode": {
                    "type": "string",
                    "enum": ["static", "database"],
                    "description": "Validation mode: 'static' for hardcoded credentials, 'database' for database lookup"
                  },
                  "identifier": {
                    "type": "string",
                    "description": "Identifier (username, email, etc.) for static mode"
                  },
                  "password": {
                    "type": "string",
                    "description": "Password for static mode"
                  },
                  "userEntity": {
                    "type": "string",
                    "description": "Entity name to query for database mode (e.g., 'User')"
                  },
                  "identifierField": {
                    "type": "string",
                    "description": "Field name to match identifier against in database mode (default: 'email')"
                  },
                  "passwordField": {
                    "type": "string",
                    "description": "Field name containing password hash in database mode (default: 'passwordHash')"
                  }
                },
                "required": ["type", "mode"],
                "oneOf": [
                  {
                    "properties": {
                      "mode": { "const": "static" }
                    },
                    "required": ["identifier", "password"]
                  },
                  {
                    "properties": {
                      "mode": { "const": "database" }
                    },
                    "required": ["userEntity"]
                  }
                ]
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "pattern": "^oauth-",
                    "description": "OAuth provider type (e.g., 'oauth-google', 'oauth-github')"
                  },
                  "clientId": {
                    "type": "string",
                    "description": "OAuth client ID"
                  },
                  "clientSecret": {
                    "type": "string",
                    "description": "OAuth client secret"
                  },
                  "redirectUri": {
                    "type": "string",
                    "description": "OAuth redirect URI"
                  },
                  "autoGenerateEndpoints": {
                    "type": "boolean",
                    "description": "Auto-generate OAuth endpoints (default: true)",
                    "default": true
                  }
                },
                "required": ["type", "clientId", "clientSecret"]
              }
            ]
          }
        }
      },
      "required": ["providers"]
    },
    "rateLimit": {
      "type": "object",
      "description": "Global rate limiting configuration",
      "properties": {
        "maxRequests": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of requests allowed in the window"
        },
        "windowMs": {
          "type": "integer",
          "minimum": 1,
          "description": "Time window in milliseconds"
        },
        "keyBy": {
          "type": "string",
          "enum": ["ip", "user", "both"],
          "default": "ip",
          "description": "How to identify clients: 'ip' (by IP address), 'user' (by authenticated user ID), or 'both'"
        },
        "store": {
          "type": "string",
          "enum": ["memory", "cache"],
          "default": "memory",
          "description": "Storage backend: 'memory' (in-memory, single-instance) or 'cache' (uses cache adapter from plugin - works with Redis, Memcached, etc.)"
        },
        "onFailure": {
          "type": "string",
          "enum": ["fail-open", "fail-closed"],
          "default": "fail-open",
          "description": "Behavior when cache/store is unavailable: 'fail-open' (allow requests, graceful degradation) or 'fail-closed' (deny requests, more secure)"
        }
      },
      "required": ["maxRequests", "windowMs"]
    },
    "realtime": {
      "type": "object",
      "description": "Realtime/WebSocket configuration",
      "properties": {
        "entities": {
          "type": "object",
          "description": "Entity-based realtime event configuration",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Enable realtime events for this entity"
              },
              "events": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["created", "updated", "deleted"]
                },
                "description": "Which events to emit (default: all)"
              },
              "watchFields": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Which fields trigger update events (default: all)"
              },
              "channelPrefix": {
                "type": "string",
                "description": "Custom channel prefix (default: entity name lowercase)"
              }
            }
          }
        },
        "channels": {
          "type": "array",
          "description": "Custom realtime channels",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Channel name"
              },
              "path": {
                "type": "string",
                "description": "WebSocket path pattern (e.g., /notifications, /chat/:roomId)"
              },
              "auth": {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean",
                    "description": "Require authentication"
                  },
                  "handler": {
                    "type": "string",
                    "description": "Custom auth handler function name"
                  }
                }
              },
              "params": {
                "type": "object",
                "description": "Path parameters definition",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "description": "Parameter type"
                    },
                    "required": {
                      "type": "boolean",
                      "description": "Parameter is required"
                    }
                  }
                }
              }
            },
            "required": ["name", "path"]
          }
        }
      }
    },
    "cache": {
      "type": "object",
      "description": "Cache configuration (optional - cache is configured via plugins)",
      "properties": {
        "provider": {
          "type": "string",
          "description": "Cache provider (e.g., 'redis', 'memcache') - configured via plugins"
        }
      }
    },
    "entities": {
      "type": "object",
      "description": "Entity definitions (database models)",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "table": {
            "type": "string",
            "description": "Database table name"
          },
          "fields": {
            "type": "object",
            "description": "Entity fields",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["uuid", "string", "number", "boolean", "timestamp", "text", "jsonb", "integer"],
                  "description": "Field type"
                },
                "dbType": {
                  "type": "string",
                  "description": "PostgreSQL-specific type override (e.g., 'varchar(255)')"
                },
                "dbColumn": {
                  "type": "string",
                  "description": "Explicit DB column name (for snake_case mapping)"
                },
                "primary": {
                  "type": "boolean",
                  "description": "Primary key field"
                },
                "generated": {
                  "type": "boolean",
                  "description": "Auto-generate value (UUID, serial, etc.)"
                },
                "nullable": {
                  "type": "boolean",
                  "description": "Allow null values"
                },
                "default": {
                  "description": "Default value or function name (e.g., 'now()')"
                },
                "index": {
                  "type": "boolean",
                  "description": "Create index on this field"
                },
                "api": {
                  "oneOf": [
                    {
                      "type": "string",
                      "description": "API field name"
                    },
                    {
                      "type": "boolean",
                      "enum": [false],
                      "description": "Set to false to exclude from API"
                    }
                  ]
                },
                "apiFormat": {
                  "type": "string",
                  "description": "Format hint for API (e.g., 'date-time')"
                },
                "required": {
                  "type": "boolean",
                  "description": "Required field in API"
                },
                "minLength": {
                  "type": "integer",
                  "minimum": 0
                },
                "maxLength": {
                  "type": "integer",
                  "minimum": 1
                },
                "min": {
                  "type": "number"
                },
                "max": {
                  "type": "number"
                },
                "pattern": {
                  "type": "string",
                  "description": "Regex pattern for validation"
                },
                "enum": {
                  "type": "array",
                  "description": "Allowed enum values"
                }
              },
              "required": ["type"]
            }
          },
          "indexes": {
            "type": "array",
            "description": "Database indexes",
            "items": {
              "type": "object",
              "properties": {
                "fields": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "name": {
                  "type": "string",
                  "description": "Index name"
                },
                "unique": {
                  "type": "boolean",
                  "description": "Unique index"
                }
              },
              "required": ["fields"]
            }
          },
          "apiSchema": {
            "type": "string",
            "description": "Optional custom API schema name (default: entity name)"
          },
          "crud": {
            "oneOf": [
              {
                "type": "boolean",
                "description": "Enable/disable CRUD endpoint generation (default: false)"
              },
              {
                "type": "object",
                "description": "CRUD configuration for auto-generating endpoints",
                "properties": {
                  "enabled": {
                    "oneOf": [
                      {
                        "type": "boolean",
                        "description": "Enable/disable CRUD endpoint generation"
                      },
                      {
                        "type": "array",
                        "items": {
                          "type": "string",
                          "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
                        },
                        "description": "Array of HTTP methods to generate (e.g., ['GET', 'POST'])"
                      },
                      {
                        "type": "object",
                        "additionalProperties": {
                          "type": "object",
                          "properties": {
                            "auth": {
                              "type": "object",
                              "properties": {
                                "required": {
                                  "type": "boolean"
                                },
                                "roles": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "permissions": {
                                  "type": "array",
                                  "items": {
                                    "type": "string"
                                  }
                                },
                                "handler": {
                                  "type": "string"
                                }
                              }
                            },
                            "path": {
                              "type": "string",
                              "description": "Custom path override for this method"
                            },
                            "inputType": {
                              "type": "string",
                              "description": "Custom input schema name for this method (overrides default Create/Update input schemas)"
                            },
                            "responseType": {
                              "type": "string",
                              "description": "Custom response schema name for this method (overrides default entity schema)"
                            }
                          }
                        },
                        "description": "Method-specific configuration. Supports individual methods (e.g., 'GET', 'POST') or method groups: 'read' (GET), 'write'/'mutate' (POST, PUT, PATCH, DELETE), 'create' (POST), 'update' (PUT, PATCH), 'delete' (DELETE). Example: { 'read': { auth: { required: false } }, 'write': { auth: { required: true, roles: ['admin'] } } }"
                      }
                    ]
                  },
                  "path": {
                    "type": "string",
                    "description": "Base path for CRUD endpoints (default: pluralized entity name, e.g., 'Example' -> '/examples')"
                  },
                  "auth": {
                    "type": "object",
                    "description": "Auth configuration applied to all CRUD endpoints",
                    "properties": {
                      "required": {
                        "type": "boolean"
                      },
                      "roles": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "permissions": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "handler": {
                        "type": "string"
                      }
                    }
                  },
                  "inputTypes": {
                    "type": "object",
                    "description": "Custom input types per HTTP method. Overrides default generated input schemas (e.g., CreateEntityInput, UpdateEntityInput). Example: { 'POST': 'CustomCreateInput', 'PATCH': 'UpdateStatusInput' }",
                    "additionalProperties": {
                      "type": "string",
                      "description": "Schema name for input type"
                    }
                  },
                  "responseTypes": {
                    "type": "object",
                    "description": "Custom response types per HTTP method. Use GET_LIST for list endpoints, GET_ONE for single item endpoints. Example: { 'GET_LIST': 'TodoSummary', 'GET_ONE': 'TodoDetail', 'POST': 'Todo' }",
                    "additionalProperties": {
                      "type": "string",
                      "description": "Schema name for response type"
                    }
                  }
                }
              }
            ],
            "description": "Optional CRUD endpoint generation. Set to true to generate all CRUD endpoints, or use object for fine-grained control."
          }
        },
        "required": ["table", "fields"]
      }
    },
    "schemas": {
      "type": "object",
      "description": "API schema definitions",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "fields": {
            "type": "object",
            "description": "Schema fields",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "integer", "array", "list", "object"],
                  "description": "Field type"
                },
                "required": {
                  "type": "boolean",
                  "description": "Required field"
                },
                "default": {
                  "description": "Default value"
                },
                "format": {
                  "type": "string",
                  "description": "Format (e.g., 'date-time', 'email', 'uri')"
                },
                "items": {
                  "description": "Item schema for array types",
                  "$ref": "#/definitions/schemaField"
                },
                "properties": {
                  "type": "object",
                  "description": "Properties for object types",
                  "additionalProperties": {
                    "$ref": "#/definitions/schemaField"
                  }
                },
                "min": {
                  "type": "number",
                  "description": "Minimum value (for numbers) or length (for strings)"
                },
                "max": {
                  "type": "number",
                  "description": "Maximum value (for numbers) or length (for strings)"
                },
                "pattern": {
                  "type": "string",
                  "description": "Regex pattern for validation"
                },
                "enum": {
                  "type": "array",
                  "description": "Allowed enum values"
                },
                "$ref": {
                  "type": "string",
                  "description": "Reference to another schema name"
                }
              }
            }
          }
        },
        "required": ["fields"]
      }
    },
    "endpoints": {
      "type": "array",
      "description": "API endpoint definitions",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Endpoint path (e.g., '/todos' or '/todos/:id')"
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS", "HEAD"],
            "description": "HTTP method"
          },
          "handler": {
            "oneOf": [
              {
                "type": "string",
                "description": "Handler function name (file in src/handlers without extension)"
              },
              {
                "type": "object",
                "description": "Built-in handler configuration",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["query"],
                    "description": "Handler type"
                  },
                  "entity": {
                    "type": "string",
                    "description": "Entity name to query"
                  },
                  "filters": {
                    "type": "array",
                    "description": "Query filters",
                    "items": {
                      "type": "object",
                      "properties": {
                        "field": {
                          "type": "string",
                          "description": "Entity field name to filter on"
                        },
                        "operator": {
                          "type": "string",
                          "enum": ["eq", "ilike", "gt", "gte", "lt", "lte"],
                          "description": "Filter operator"
                        },
                        "param": {
                          "type": "string",
                          "description": "Parameter reference (e.g., 'query.search' or 'params.id')"
                        }
                      },
                      "required": ["field", "operator", "param"]
                    }
                  },
                  "pagination": {
                    "oneOf": [
                      {
                        "type": "boolean",
                        "description": "Enable pagination with defaults (offset type, limit=20)"
                      },
                      {
                        "type": "object",
                        "description": "Pagination configuration",
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": ["offset", "page", "cursor"],
                            "description": "Pagination type (default: 'offset')"
                          },
                          "limit": {
                            "oneOf": [
                              {"type": "string", "description": "Parameter reference (e.g., 'query.limit')"},
                              {"type": "number", "description": "Direct limit value"}
                            ],
                            "description": "Number of items per page (default: 20)"
                          },
                          "offset": {
                            "oneOf": [
                              {"type": "string", "description": "Parameter reference (e.g., 'query.offset')"},
                              {"type": "number", "description": "Direct offset value"}
                            ],
                            "description": "Offset for offset-based pagination"
                          },
                          "page": {
                            "oneOf": [
                              {"type": "string", "description": "Parameter reference (e.g., 'query.page')"},
                              {"type": "number", "description": "Direct page number (1-indexed)"}
                            ],
                            "description": "Page number for page-based pagination"
                          },
                          "pageSize": {
                            "oneOf": [
                              {"type": "string", "description": "Parameter reference (e.g., 'query.pageSize')"},
                              {"type": "number", "description": "Direct page size value (default: 20)"}
                            ],
                            "description": "Number of items per page for page-based pagination"
                          },
                          "cursor": {
                            "type": "string",
                            "description": "Parameter reference for cursor value (e.g., 'query.cursor')"
                          },
                          "cursorField": {
                            "type": "string",
                            "description": "Field to use for cursor pagination (default: primary key)"
                          },
                          "direction": {
                            "type": "string",
                            "enum": ["forward", "backward"],
                            "description": "Direction for cursor pagination (default: 'forward')"
                          },
                          "metadata": {
                            "type": "array",
                            "items": {
                              "type": "string",
                              "enum": ["total", "hasNext", "hasPrev", "nextCursor", "prevCursor"]
                            },
                            "description": "Specific metadata fields to include (default: all fields included)"
                          }
                        }
                      }
                    ]
                  },
                  "orderBy": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "field": {
                            "type": "string",
                            "description": "Field name to order by"
                          },
                          "direction": {
                            "type": "string",
                            "enum": ["asc", "desc"],
                            "description": "Sort direction"
                          }
                        },
                        "required": ["field"]
                      },
                      {
                        "type": "string",
                        "description": "Parameter reference (e.g., 'query.orderBy')"
                      }
                    ]
                  }
                },
                "required": ["type", "entity"]
              }
            ]
          },
          "description": {
            "type": "string",
            "description": "Endpoint description"
          },
          "params": {
            "type": "object",
            "description": "Path parameters",
            "additionalProperties": {
              "$ref": "#/definitions/schemaField"
            }
          },
          "query": {
            "type": "object",
            "description": "Query parameters",
            "additionalProperties": {
              "$ref": "#/definitions/schemaField"
            }
          },
          "body": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "Schema name for request body"
              }
            },
            "required": ["type"]
          },
          "response": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "Schema name for response"
              }
            },
            "required": ["type"]
          },
          "auth": {
            "type": "object",
            "properties": {
              "required": {
                "type": "boolean",
                "description": "Authentication required"
              },
              "roles": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Required roles"
              },
              "permissions": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Required permissions (user must have at least one, derived from their roles)"
              },
              "handler": {
                "type": "string",
                "description": "Custom authorization handler function name"
              },
              "provider": {
                "type": "string",
                "description": "Provider type or name to use"
              }
            }
          },
          "rateLimit": {
            "type": "object",
            "description": "Per-endpoint rate limiting configuration (overrides global)",
            "properties": {
              "maxRequests": {
                "type": "integer",
                "minimum": 1,
                "description": "Maximum number of requests allowed in the window"
              },
              "windowMs": {
                "type": "integer",
                "minimum": 1,
                "description": "Time window in milliseconds"
              },
              "keyBy": {
                "type": "string",
                "enum": ["ip", "user", "both"],
                "description": "How to identify clients (overrides global setting)"
              }
            },
            "required": ["maxRequests", "windowMs"]
          }
        },
        "required": ["path", "method"]
      }
