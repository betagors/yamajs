{
  "name": "@betagors/yama-monorepo",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "npm test && turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:example": "pnpm build:packages",
    "dev": "turbo run dev --parallel",
    "dev:packages": "turbo run dev --parallel --filter='./packages/*'",
    "dev:example": "pnpm build:packages && pnpm --filter yama-example-todo-api dev",
    "start:example": "pnpm --filter yama-example-todo-api dev",
    "lint": "turbo run lint",
    "test": "jest --coverage && turbo run test",
    "clean": "turbo run clean",
    "clean:all": "turbo run clean && rimraf node_modules packages/*/node_modules examples/*/node_modules",
    "yama": "node packages/yama-cli/dist/yama-cli/src/cli.js",
    "yama:dev": "yama dev",
    "yama:generate": "yama generate",
    "yama:validate": "yama validate"
  },
  "devDependencies": {
    "turbo": "latest",
    "typescript": "^5.6.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}